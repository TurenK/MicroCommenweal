<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/VolunteerInfoLayout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/VBackground"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/back_vol"
                    tools:ignore="RtlCompat">

                </ImageView>
                <ImageButton
                    android:id="@+id/head"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/kanna"/>
                <TextView
                    android:id="@+id/str_VName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:text="桥本环奈\n" />
                <TextView
                    android:id="@+id/str_VFollow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="粉丝:1000 关注：20\n" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/VNaviLayout"
                android:layout_below="@+id/VolunteerInfoLayout"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/VButton_like"
                    android:layout_width="0dip"
                    android:layout_height="72dip"
                    android:layout_weight="1"
                    android:background="#E0FFFF"
                    android:textColor="#79CDCD"
                    android:text="收藏" />

                <Button
                    android:id="@+id/VButton_useless"
                    android:layout_width="0dip"
                    android:layout_height="72dip"
                    android:layout_weight="1"
                    android:background="#76EEC6"
                    android:textColor="@color/white"
                    android:text="参与项目" />
                <!--  这个按钮 是 凑数的 有别的 再加-->


                <Button
                    android:id="@+id/VButton_join"
                    android:layout_width="0dip"
                    android:layout_height="72dip"
                    android:layout_weight="1"
                    android:background="#E0FFFF"
                    android:textColor="#79CDCD"
                    android:text="义工记录" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/VButtonLayout"
                android:layout_below="@+id/VNaviLayout"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color1"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/green" />


                    <Button
                        android:id="@+id/VButton_volCredit"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color1"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      信用得分"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color2"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/blue" />


                    <Button
                        android:id="@+id/VButton_volBank"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color2"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      时间银行"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color3"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/orange" />


                    <Button
                        android:id="@+id/VButton_volRank"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color3"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      排行榜"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color4"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/green" />


                    <Button
                        android:id="@+id/VButton_volMedal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color4"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      公益勋章"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color5"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/blue" />


                    <Button
                        android:id="@+id/VButton_volLevel"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color5"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      等级"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dip"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color6"
                        android:layout_width="5dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/orange" />


                    <Button
                        android:id="@+id/VButton_volAuthen"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/color6"
                        android:background="@color/white"
                        android:gravity="center_vertical|left"
                        android:text="      实名认证"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>