<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/button_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_back"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_submit" />
        </RelativeLayout>
        <!--活动详情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/charity_it"
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/charity_iamge"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"
                    android:scaleType="centerInside"
                    android:src="@drawable/thumbnail1" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/charity_name"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:lineSpacingMultiplier="1.3"
                    android:text="同饮一湖清水，共享生态文明，保护水库环境做文明市民签名活动"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_num"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="10人报名"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/charity_description"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:text="test"
                            android:textSize="20dp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <!--星星-->
        <RelativeLayout
            android:id="@+id/rate_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/title_layout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/pingxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="项目评星:     "
                android:textColor="#191970"
                android:textSize="15sp"
                android:textStyle="bold" />


            <RatingBar
                android:id="@+id/star_rating"
                style="@style/mRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/pingxing"
                android:numStars="5"
                android:orientation="vertical"
                android:progressTint="@android:color/holo_orange_dark"
                android:rating="0.0"
                android:stepSize="1.0" />
        </RelativeLayout>
        <!--文字描述-->
        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_below="@+id/rate_layout"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/wenzimiaoshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"

                android:layout_marginTop="11dp"
                android:text="文字描述"
                android:textColor="#191970"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="322dp"
                android:layout_height="93dp"
                android:layout_alignLeft="@+id/wenzimiaoshu"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/wenzimiaoshu"
                android:layout_marginTop="42dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/P2O_Commit"
                    android:layout_height="41dp"
                    android:hint="hint" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <!--图片怎么加啊-->
    </LinearLayout>
</RelativeLayout>