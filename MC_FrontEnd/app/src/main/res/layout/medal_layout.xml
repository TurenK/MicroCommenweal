<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hfp.MicroCommonweal.activity.PublishActivity">
    <!--标题栏消息-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="勋章"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/str_lichengbei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="   里程碑"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFAFA"
            />
            <View
                android:id="@+id/blank02"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary" />
            <View
                android:id="@+id/blank03"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/str_czsy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="成长生涯"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <ImageView
                android:id="@+id/image_medal_flag"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/medal_flag" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_medal_1"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_1" />

                    <TextView
                        android:id="@+id/str_smxz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="实名勋章" />

                    <ImageView
                        android:id="@+id/image_medal_5"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_5" />

                    <TextView
                        android:id="@+id/str_gydr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="公益达人" />

                    <ImageView
                        android:id="@+id/image_medal_8"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_8" />

                    <TextView
                        android:id="@+id/str_5k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="5000益豆" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_medal_2"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_2" />

                    <TextView
                        android:id="@+id/str_ydbb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="益豆宝宝" />

                    <ImageView
                        android:id="@+id/image_medal_6"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_6" />

                    <TextView
                        android:id="@+id/str_50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="50小时" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_medal_3"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_3" />

                    <TextView
                        android:id="@+id/str_axdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="爱心达人" />

                    <ImageView
                        android:id="@+id/image_medal_7"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_7" />

                    <TextView
                        android:id="@+id/str_500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="500小时" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_medal_4"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_4" />

                    <TextView
                        android:id="@+id/str_ygdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="义工达人" />

                    <ImageView
                        android:id="@+id/image_medal_9"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/medal_9" />

                    <TextView
                        android:id="@+id/str_meizuo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="1000小时" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/image_medal_gongyixunzhang"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/medal_gongyixunzhang" />
        </LinearLayout>
    </ScrollView>




</LinearLayout>
