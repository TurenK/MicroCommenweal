<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/charity_it"
            android:layout_width="150dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/charity_iamge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_4" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/charity_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/dp_4"
                android:gravity="left"
                android:lineSpacingMultiplier="1.3"
                android:text="同饮一湖清水，共享生态文明，保护水库环境做文明市民签名活动"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginRight="@dimen/dp_4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="10人报名"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="#81D8CF"
                    android:gravity="center"
                    android:text="报名中"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />




            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_12"
        android:background="@drawable/separate_line_items"
        />
</LinearLayout>
