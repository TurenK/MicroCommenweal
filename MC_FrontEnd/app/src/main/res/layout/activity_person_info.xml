<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0">
    <!--标题栏消息-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/btn_back_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户基本信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--装饰-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <!--头像+昵称+签名-->
            <LinearLayout
                android:id="@+id/MessageLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/massage"
                    android:layout_width="80dip"
                    android:layout_height="80dip">

                    <ImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="51dp"
                        android:layout_height="53dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/avatar1" />
                </RelativeLayout>
                <!--头像+昵称+简介（装饰吧）-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/str_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="35dp"
                        android:text="桥本环奈"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                    <!--用户简介-->
                    <TextView
                        android:id="@+id/str_intro"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:gravity="left"
                        android:text="qbhn真好看！"
                        android:textColor="@color/gray" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <!--三栏-->
            <LinearLayout
                android:id="@+id/ly_information"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/line"
                android:background="@color/white"
                android:baselineAligned="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/tv_comment_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@null"
                        android:text="0分"
                        android:textColor="#5CACEE" />

                    <TextView
                        android:id="@+id/tv_comment_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_comment_score"
                        android:layout_centerHorizontal="true"
                        android:text="评价综合"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@null"
                        android:text="0"
                        android:textColor="#00EE00" />

                    <TextView
                        android:id="@+id/tv_time_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_time"
                        android:layout_centerHorizontal="true"
                        android:text="参与时长"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/rl_charity_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/tv_charity_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@null"
                        android:text="0"
                        android:textColor="#EEC900" />


                    <TextView
                        android:id="@+id/tv_charity_num_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_charity_num"
                        android:layout_centerHorizontal="true"
                        android:text="参与活动"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
            <!--装饰-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/layout_info"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">
                    <!--义工时长 装饰的吧-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/color1"
                            android:layout_width="5dip"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/green" />

                        <Button
                            android:id="@+id/iBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/color1"
                            android:background="@color/white"
                            android:gravity="center_vertical|left"
                            android:text="      获得评价:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <!--乱写一个时间吧-->
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/pic_icon1"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_alignBottom="@id/iBtn"
                        android:layout_alignParentLeft="true"
                        android:background="#EAEAEA"
                        />

                    <RelativeLayout
                        android:id="@+id/content_pingjia_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <android.support.v4.widget.SwipeRefreshLayout
                            android:id="@+id/swipe_refresh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        </android.support.v4.widget.SwipeRefreshLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/pic_icon3"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_alignTop="@+id/str_canyu_list"
                        android:layout_alignParentLeft="true"
                        android:background="#EAEAEA" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/color3"
                            android:layout_width="5dip"
                            android:layout_height="50sp"
                            android:layout_alignParentLeft="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/orange" />


                        <Button
                            android:id="@+id/str_canyu_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/color3"
                            android:background="@color/white"
                            android:gravity="center_vertical|left"
                            android:text="      参与列表"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/pic_icon"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_alignBottom="@id/iBtn"
                        android:layout_alignParentLeft="true"
                        android:background="#EAEAEA" />
                    <!--这里放展开的参与的项目的ITEM-->
                    <RelativeLayout
                        android:id="@+id/content_canyu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_charity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
