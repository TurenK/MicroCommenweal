<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hfp.MicroCommonweal.activity.PublishActivity">
    <!--标题栏消息-->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="等级"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--最顶上的装饰-->

            <ImageView
                android:id="@+id/img_grading_top"
                android:layout_width="wrap_content"
                android:layout_height="196dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:src="@drawable/graing_top"
                tools:ignore="RtlCompat"></ImageView>
            <!--一条划分的图-->
            <ImageView
                android:id="@+id/img_grading_line"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:src="@drawable/grading_line"
                tools:ignore="RtlCompat"></ImageView>
             <!--等级划分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/str_putongyonghu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="普通用户" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_green_heart"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/heart_g" />
                    <TextView
                        android:id="@+id/str_5000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="5000益豆" />

                    <TextView
                        android:id="@+id/str_axdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="爱心达人" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_orange_heart"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/heart_o" />
                    <TextView
                        android:id="@+id/str_50000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="50000益豆" />

                    <TextView
                        android:id="@+id/str_ygdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="义工达人" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_red_heart"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/heart_r" />
                    <TextView
                        android:id="@+id/str_500000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="500000益豆" />

                    <TextView
                        android:id="@+id/str_gydr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="公益达人" />

                </LinearLayout>
            </LinearLayout>
            <!--分割装饰-->
            <View
                android:id="@+id/blank01"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="#F0F0F0" />
            <TextView
                android:background="@color/white"
                android:id="@+id/str_yonghutequan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="   我的特权"
                android:textColor="@color/black" />
            <View
                android:id="@+id/blank02"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/alpha_blue" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_privilege_apply"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/privilege_apply" />

                <TextView
                    android:id="@+id/str_shenqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="申请义工" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_privilege_generate"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/privilege_generate" />

                <TextView
                    android:id="@+id/str_shengcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="生成义工证" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>
